package com.epinom.lan.machupicchu.views{	import caurina.transitions.Tweener;		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.MouseEvent;
		public class Sections extends MovieClip	{		private var actualWindow:MovieClip;				public function Sections()		{			super();			trace("Sections->Sections()*******************");						// Nivel de visibilidad para las ventanas			homeWindow.alpha = 0;			homeWindow.visible = false;			registerWindow.alpha = 0;			registerWindow.visible = false;						// Visualizando primera ventana			actualWindow = homeWindow;			actualWindow.visible = true;			Tweener.addTween(actualWindow, {alpha:1, time:1, transition:"easeOutCubic"});						// Configurando detectores de eventos para las ventanas			configHandlers();		}				public function configHandlers():void 		{			// Home Window			(homeWindow.participateButton as SimpleButton).addEventListener(MouseEvent.CLICK, showRegisterWindow); 		} 				private function showRegisterWindow(evt:MouseEvent):void 		{			trace("Register window... ");						// Transicion			registerWindow.visible = true;			transitionBetweenWindows(actualWindow, registerWindow);		}				private function transitionBetweenWindows(actualWindow:MovieClip, nextWindow:MovieClip):void		{			// Cambiando nivel de visibilidad			nextWindow.visible = true;						// Realizando animacion			Tweener.addTween(actualWindow, {alpha:0, time:1, transition:"easeOutCubic", onComplete:onCompleteTransitionBetweenWindows, onCompleteParams:[actualWindow, nextWindow]});			Tweener.addTween(nextWindow, {alpha:1, time:1, transition:"easeOutCubic"});		}				private function onCompleteTransitionBetweenWindows(actualWindow:MovieClip, nextWindow:MovieClip):void		{			trace("Sections->onCompleteTransitionBetweenWindows");			actualWindow.visible = false;		}	}}